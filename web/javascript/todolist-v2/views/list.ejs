<%- include("header"); -%>
        <div class="box" id="heading">
            <h1><%= listName %></h1>
        </div>
        <div class="box">
            <% items.forEach(function(item) {%>
            <form action="/delete", method="post">
            <div class="item">
                <input name="checkbox" value="<%= item._id %>" type="checkbox" onChange="this.form.submit()">
                <p><%= item.name %></p>   
            </div>
            <input type="hidden" name="list" value="<%= listName %>"></input>
            </form>
            <% }); %>
            <form class="item" action="/" method="post">
                <input type="text" name="item" placeholder="New item" autocomplete="off">
                <button name="list" value=<%= listName %> type="submit">+</button>
            </form>
        </div>
<%- include("footer"); -%>
